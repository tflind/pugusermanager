doctype html

html
    head
        title Users
        style.
            td, th {
                border: 1px solid black;
                padding: 10px;
            }
body
    h1 User Listings
    a(href='/')
        button Home
    a(href='/createuser')
        button Add User
        table
            tr
                th ID
                th Name
                th Email
                th Age
                th Delete
                th Edit
            for user in users
                tr
                    td= user.id
                    td= user.name
                    td= user.email
                    td= user.age
                    td
                        a(href='./delete/' + user.id)
                            button Delete
                    td
                        a(href='./createuser/' + user.id)
                            button Edit